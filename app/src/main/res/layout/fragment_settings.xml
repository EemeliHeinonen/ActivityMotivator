<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/tvFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:paddingBottom="12dp"/>

    <TextView android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:layout_below="@id/tvFragment" />

    <EditText android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter your age here"
        android:layout_below="@id/tvAge" />

    <TextView android:id="@+id/tvBurstDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/burst_length"
        android:layout_below="@id/etAge" />

    <EditText android:id="@+id/etBurstLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="12sp"
        android:hint="Enter the interval burst length in seconds"
        android:layout_below="@id/tvBurstDescription" />

</RelativeLayout>